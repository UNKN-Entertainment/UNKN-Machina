{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "outDir": "./dist",
        "paths": {
			"@root/*": ["*"],
			"@lib/*": ["src/lib/*"],
			"@pieces/*": ["src/components/*"]
        },
        "resolveJsonModule": true,
        "rootDir": "./",
		"target": "ES2019",
		"types": [
			"node",
			"discord.js"
		],
        "module": "commonjs"
    },
    "exclude": [
        "**/node_modules",
		"**/dist",
		"config.example.ts"
    ]
}
